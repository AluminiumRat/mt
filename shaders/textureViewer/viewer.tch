selections:
  NEAREST_SAMPLER: [0, 1]

passes:
  FlatPass :
    selections: [NEAREST_SAMPLER]

    shaders:
      VERTEX : textureViewer/viewer.vert
      FRAGMENT : textureViewer/viewer.frag

    frameBuffer:
      color: VK_FORMAT_B8G8R8A8_SRGB

    graphicSettings:
      topology: TRIANGLE_STRIP

defaultSamplers:
  linearSampler:
    magFilter: LINEAR
    minFilter: LINEAR
    mipmapMode: LINEAR

  nearestSampler:
    magFilter: NEAREST
    minFilter: NEAREST
    mipmapMode: NEAREST