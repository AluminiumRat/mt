defaultSamplers:
  textureSampler:
    magFilter: LINEAR
    minFilter: LINEAR
    mipmapMode: LINEAR

passes:
  FlatPass :
    shaders:
      VERTEX : textureViewer/viewer.vert
      FRAGMENT : textureViewer/viewer.frag

    frameBuffer:
      color: VK_FORMAT_B8G8R8A8_SRGB

    graphicSettings:
      topology: TRIANGLE_STRIP