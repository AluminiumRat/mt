    shaders:
      VERTEX : examples/mesh/shader.vert
      FRAGMENT : examples/mesh/shader.frag

    frameBuffer:
      color: VK_FORMAT_B8G8R8A8_SRGB

    graphicSettings:
      topology: TRIANGLE_STRIP