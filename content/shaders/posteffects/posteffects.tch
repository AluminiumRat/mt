selections:
  BLOOM_ENABLED : [0, 1]

defaultSamplers:
  linearSampler:
    magFilter: LINEAR
    minFilter: LINEAR
    mipmapMode: LINEAR

passes:
  ResolvePass :
    selections: [BLOOM_ENABLED]

    shaders:
      VERTEX : lib/fsQuad.vert
      FRAGMENT : posteffects/posteffects.frag

    frameBuffer:
      color: VK_FORMAT_B8G8R8A8_SRGB

    graphicSettings:
      topology: TRIANGLE_STRIP